{
    "name": "tsx-library-julseb",
    "private": false,
    "version": "7.0.8",
    "license": "MIT",
    "main": "./index.js",
    "exports": {
        ".": {
            "import": "./index.js",
            "require": "./index.js"
        },
        "./index.css": {
            "import": "./index.css",
            "require": "./index.css"
        },
        "./types": {
            "import": "./types.js",
            "require": "./types.js"
        }
    },
    "dependencies": {
        "fuse.js": "^6.6.2",
        "markdown-to-jsx": "^7.2.0",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "react-helmet": "^6.1.0",
        "react-inlinesvg": "^3.0.2",
        "react-router-dom": "^6.9.0",
        "react-scripts": "5.0.1",
        "react-syntax-highlighter": "^15.5.0",
        "styled-components": "^5.3.9",
        "ts-utils-julseb": "^2.2.12",
        "typescript": "^5.0.2",
        "web-vitals": "^3.3.0"
    },
    "scripts": {
        "start": "react-scripts start",
        "build": "react-scripts build",
        "test": "react-scripts test",
        "eject": "react-scripts eject",
        "clean": "rm -rf lib && mkdir lib",
        "add-git": "cd lib && git init && git remote add origin https://github.com/JulSeb42/tsx-library.git && git pull origin master && rm -rf * && rm -rf .gitignore && rm -rf .prettierrc",
        "create-build-folder": "cd lib && mkdir build && cd ..",
        "copy-to-lib": "cp -a ./src/lib/* ./package.json ./.gitignore ./.prettierrc ./README.md ./lib",
        "copy-config": "cp ./tsconfig-lib.json ./lib/tsconfig.json",
        "copy-to-build": "cp ./package.json ./.gitignore ./.prettierrc ./README.md ./makefile ./lib/index.css ./lib/modules-declare.d.ts ./lib/build",
        "copy-flags": "mkdir lib/build/utils && cp -a lib/utils/flags lib/build/utils/flags",
        "copy-icons": "mkdir lib/build/icons-svg && cp lib/icons-svg/* lib/build/icons-svg",
        "build-lib": "yarn clean && yarn add-git && yarn create-build-folder && yarn copy-config && yarn copy-to-lib && yarn copy-to-build && yarn copy-flags && yarn copy-icons && cd lib && tsc && cd ..",
        "publish-lib": "yarn publish ./lib/build"
    },
    "eslintConfig": {
        "extends": [
            "react-app",
            "react-app/jest"
        ]
    },
    "browserslist": {
        "production": [
            ">0.2%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    },
    "devDependencies": {
        "@types/jest": "^29.5.0",
        "@types/node": "^18.15.10",
        "@types/react": "^18.0.29",
        "@types/react-dom": "^18.0.11",
        "@types/react-helmet": "^6.1.6",
        "@types/react-inlinesvg": "^1.0.0",
        "@types/react-syntax-highlighter": "^15.5.6",
        "@types/styled-components": "^5.1.26"
    }
}
