{
    "name": "tsx-library-julseb",
    "private": false,
    "version": "7.0.3",
    "license": "MIT",
    "main": "./index.js",
    "exports": {
        ".": {
            "import": "./index.js",
            "require": "./index.js"
        },
        "./index.css": {
            "import": "./index.css",
            "require": "./index.css"
        },
        "./types": {
            "import": "./types.js",
            "require": "./types.js"
        }
    },
    "scripts": {
        "dev": "vite",
        "build": "tsc && vite build",
        "preview": "vite preview",
        "clean": "rm -rf lib && mkdir lib",
        "add-git": "cd lib && git init && git remote add origin https://github.com/JulSeb42/tsx-library.git && git pull origin master && rm -rf * && rm -rf .gitignore && rm -rf .prettierrc",
        "create-build-folder": "cd lib && mkdir build && cd ..",
        "copy-to-lib": "cp -a ./src/lib/* ./package.json ./.gitignore ./.prettierrc ./README.md ./lib",
        "copy-config": "cp ./tsconfig-lib.json ./lib/tsconfig.json",
        "copy-package": "cp ./package.json ./.gitignore ./.prettierrc ./README.md ./makefile ./lib/index.css ./lib/modules-declare.d.ts ./lib/build",
        "copy-utils": "mkdir lib/build/utils && cp -a lib/utils/flags lib/build/utils/flags",
        "copy-icons": "mkdir lib/build/icons-svg && cp lib/icons-svg/* lib/build/icons-svg",
        "compile": "cd lib && tsc && cd ..",
        "build-lib": "yarn clean && yarn add-git && yarn create-build-folder && yarn copy-to-lib && yarn copy-config && yarn copy-package && yarn copy-utils && yarn copy-icons && yarn compile",
        "publish-lib": "yarn publish ./lib/build"
    },
    "dependencies": {
        "fuse.js": "^6.6.2",
        "markdown-to-jsx": "^7.2.0",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "react-helmet": "^6.1.0",
        "react-inlinesvg": "^3.0.2",
        "react-router-dom": "^6.9.0",
        "react-syntax-highlighter": "^15.5.0",
        "styled-components": "^5.3.9",
        "ts-utils-julseb": "^2.2.14"
    },
    "devDependencies": {
        "@babel/core": "^7.21.3",
        "@types/node": "^18.15.10",
        "@types/react": "^18.0.30",
        "@types/react-dom": "^18.0.11",
        "@types/react-helmet": "^6.1.6",
        "@types/react-inlinesvg": "^1.0.0",
        "@types/react-syntax-highlighter": "^15.5.6",
        "@types/styled-components": "^5.1.26",
        "@vitejs/plugin-react": "^3.1.0",
        "babel-loader": "^9.1.2",
        "eslint": "^8.36.0",
        "eslint-config-prettier": "^8.8.0",
        "eslint-config-react-app": "^7.0.1",
        "eslint-plugin-prettier": "^4.2.1",
        "prettier": "^2.8.7",
        "typescript": "^4.8.4",
        "vite": "^4.2.1",
        "vite-plugin-eslint": "^1.8.1",
        "vite-tsconfig-paths": "^4.0.7"
    }
}
