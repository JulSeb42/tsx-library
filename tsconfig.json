{
    "compilerOptions": {
        "lib": [
            "DOM",
            "DOM.Iterable",
            "ESNext",
            "ES2021.String"
        ],
        "skipLibCheck": true,
        "strict": true,
        "jsx": "react-jsx",
        "declaration": true,
        "esModuleInterop": true,
        "outDir": "build",
        "target": "es5",
        "module": "es2020",
        "moduleResolution": "node",
        "downlevelIteration": true,
        "rootDir": "./"
    },
    "exclude": [
        "node_modules"
    ]
}